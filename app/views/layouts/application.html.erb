<!DOCTYPE html>
<html>
<head>
  <title>RailsAssessment</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
      <%= render 'layouts/navigation' %>
  </header>
  <div class="container messages bg-info">
    <%= content_tag(:div, flash[:error], :id => "flash_error", :class => "text-danger") if flash[:error] %>
    <%= content_tag(:div, flash[:notice], :id => "flash_notice", :class => "text-info") if flash[:notice] %>
    <%= content_tag(:div, flash[:alert], :id => "flash_alert", :class => "text-warning") if flash[:alert] %>
</div>
  <div class="container">
    <%= yield %>
  </div>


</body>
</html>
